<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/privacyTermsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".PrivacyTermsActivity">

    <!-- AppBar with Toolbar for Back Button -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarPrivacy"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:titleTextColor="@android:color/black"
            app:navigationIcon="@drawable/ic_arrow_back" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- SmartFit Logo -->
        <ImageView
            android:id="@+id/ivLogoPrivacy"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:src="@drawable/smartfit_logo_black"
            android:contentDescription="SmartFit Logo" />

        <!-- Page Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy & Terms"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:fontFamily="@font/futura_bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- Divider for Separation -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp" />

        <!-- Scrollable Content -->
        <ScrollView
            android:id="@+id/scrollViewPrivacyTerms"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/tvPrivacyTermsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/privacy_terms_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:lineSpacingExtra="6dp"
                android:background="#F9F9F9"
                android:elevation="2dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="12dp" />
        </ScrollView>

        <!-- Back Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_black"
            android:text="BACK"
            android:textColor="@android:color/white"
            android:fontFamily="@font/futura_bold"
            android:textAllCaps="false"
            android:elevation="4dp" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
